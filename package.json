{
  "name": "fablab-api-gateway",
  "version": "1.0.0",
  "description": "API gateway for fablab access",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./src/server.ts",
    "start": "node ./dist/server.js",
    "prod": "npm run build && npm start",
    "test": "nyc mocha -r ts-node/register \"./src/**/*.spec.ts\""
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.spec.ts",
      "dist/",
      "coverage",
      "src/libs/",
      "test-helpers.js"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "author": "Fabian meyer <f@bian-meyer.de>",
  "license": "ISC",
  "engines": {
    "node": ">= 11.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.3",
    "@types/sinon": "^5.0.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.2.0",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "config": "^2.0.1",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "url": "^0.11.0",
    "xmlrpc": "^1.3.2"
  }
}
